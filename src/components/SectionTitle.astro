---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="text-center">
  <h2
    data-aos="fade-up"
    data-offset="200"
    class="text-2xl font-semibold text-hr-primary"
  >
    {title}
  </h2>
  <p data-aos="fade-up" data-aos-delay="300" class="text-hr-primary-light">
    {subtitle}
  </p>
</div>
